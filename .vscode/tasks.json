{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Assemble",
            "command": "py",
            "type": "shell",
            "args": [
                "assembler.py",
                "-if", "${file}",
                "-of", "${fileDirname}${pathSeparator}..${pathSeparator}build${pathSeparator}${fileBasenameNoExtension}.bin",
                "-v"
            ],
            "problemMatcher": [
                "$tsc"
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": "build"
        }
    ]
}